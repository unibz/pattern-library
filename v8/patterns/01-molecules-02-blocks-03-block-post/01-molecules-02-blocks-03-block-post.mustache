&lt;div class=&quot;{{ class }} post&quot;&gt;
  {{&gt; atoms-text-date (class: &quot;post_date&quot;) }}
  {{&gt; atoms-text-span (class: &quot;post_topic&quot;)}}
  &lt;div class=&quot;post_body&quot;&gt;
    {{# post-image }}
      &lt;div class=&quot;post_figure {{# post-image-full }}post_figure-full{{/ post-image-full}}&quot;&gt;
        &lt;a href=&quot;{{url}}&quot;&gt;
          {{&gt; atoms-image-4x3 }}
        &lt;/a&gt;
      &lt;/div&gt;
    {{/ post-image }}
    &lt;a href=&quot;{{ url }}&quot;&gt;
      {{&gt; atoms-heading-4 (class: &quot;post_title&quot;) }}
    &lt;/a&gt;
    {{&gt; atoms-text-paragraph (class: &quot;post_excerpt&quot;) }}
  &lt;/div&gt;
&lt;/div&gt;