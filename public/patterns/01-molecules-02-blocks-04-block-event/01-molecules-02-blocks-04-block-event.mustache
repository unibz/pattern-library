&lt;div class=&quot;event {{ class }}&quot;&gt;
  {{^ empty }}
    &lt;a class=&quot;event_figure&quot; href=&quot;{{ url }}&quot; style=&quot;background-image: url('{{ img-4x3 }}')&quot;&gt;&lt;/a&gt;
  {{/ empty }}
  &lt;div class=&quot;event_body&quot;&gt;
    {{# event-title }}
      {{&gt; atoms-heading-2 (class: &quot;event_title&quot;) }}
    {{/ event-title }}
    &lt;div class=&quot;event_details&quot;&gt;
      {{# event-campus }}
        {{&gt; atoms-text-span (class: &quot;event_meta&quot;) }}
      {{/ event-campus }}
      {{# event-room }}
        {{&gt; atoms-text-span (class: &quot;event_meta&quot;) }}
      {{/ event-room }}
      {{# event-time }}
        {{&gt; atoms-text-time (class: &quot;event_meta&quot;) }}
      {{/ event-time }}
      {{# event-date }}
        {{&gt; atoms-text-date (class: &quot;event_meta&quot;) }}
      {{/ event-date }}
    &lt;/div&gt;
    {{# event-button }}
      {{&gt; atoms-button-text-small (class: &quot;event_btn&quot;) }}
    {{/ event-button }}
  &lt;/div&gt;
&lt;/div&gt;