&lt;section class=&quot;hero&quot; role=&quot;banner&quot;&gt;
  &lt;div class=&quot;hero_image&quot; style=&quot;background-image:url({{ img-background }})&quot;&gt;
    {{# hero-search }}
      {{&gt; atoms-forms-input-search (class: &quot;hero_search&quot;)}}
    {{/ hero-search }}
  &lt;/div&gt;
  {{# hero-text }}
    &lt;div class=&quot;hero_text&quot;&gt;
      {{# hero-label }}
        {{&gt; atoms-heading-5 (class:&quot;hero_titleLabel&quot;) }}
      {{/ hero-label }}
      {{# hero-title }}
        {{&gt; atoms-heading-1 (class:&quot;hero_title&quot;) }}
      {{/ hero-title }}
    &lt;/div&gt;
  {{/ hero-text }}
&lt;/section&gt;