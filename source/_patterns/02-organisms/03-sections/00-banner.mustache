<section class="l-section">
  <div class="banner {{ class }}" role="banner" {{# empty }}{{/ empty }}{{^ empty }}style="background-image:url('{{ img-background }}')"{{/ empty }}>
    <div class="l-container">
      {{# banner-headline }}
        {{> atoms-heading-1 (class: "banner_title") }}
      {{/ banner-headline }}

      {{# banner-subheadline }}
        {{> atoms-heading-2 (class: "banner_subTitle") }}
      {{/ banner-subheadline }}

      {{# banner-text }}
        {{> atoms-text-paragraph (class: "banner_text") }}
      {{/ banner-text }}

      {{# empty }}
        {{# banner-button }}
          {{> atoms-button-alternate (class: "banner_btn") }}
        {{/ banner-button }}
      {{/ empty }}

      {{^ empty }}
        {{# banner-button }}
          {{> atoms-button-medium (class: "banner_btn") }}
        {{/ banner-button }}
      {{/ empty }}
    </div>
  </div>
</section>