<section class="l-section">
  <div class="l-container">
    <div class="g-row">
      <div class="g g-md-8 g-lg-8 g-md-push-16">
      {{# event-image }}
        {{> atoms-image-2x3 (class:"event_poster")}}
      {{/ event-image }}
      </div>
      <div class="g g-md-16 g-lg-14 g-xl-14 g-md-pull-8">
        {{# event-meta }}
          <div class="event_meta eventDetail_meta">
            {{# event-location }}
              {{> atoms-text-span (class: "event_location") }}
            {{/ event-location }}
            {{# event-date }}
              {{> atoms-text-date (class: "event_date") }}
            {{/ event-date }}
            {{# event-time }}
              {{> atoms-text-time (class: "event_time") }}
            {{/ event-time }}
          </div>
        {{/ event-meta }}
        {{# event-description }}
          {{> atoms-text-paragraph }}
        {{/ event-description }}
      </div>
  </div>
</section>