<div class="{{ class }}post">
  {{> atoms-text-date (class: "post_date") }}
  <div class="post_body">
    <a href="{{ url }}">
      {{> atoms-heading-5 (class: "post_title") }}
    </a>
    {{> atoms-text-paragraph (class: "post_excerpt") }}
    {{> atoms-button-text (class: "btn-text-small btn-text-primary post_btn") }}
  </div>
</div>