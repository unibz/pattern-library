<div class="{{ class }}post">
  {{> atoms-text-date (class: "post_date") }}
  <div class="post_body">
    {{> atoms-text-span (class: "post_topic")}}
    <a href="{{ url }}">
      {{> atoms-heading-4 (class: "post_title") }}
    </a>
    {{> atoms-text-paragraph (class: "post_excerpt") }}
  </div>
</div>