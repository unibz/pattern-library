<div class="{{ class }} event">
  <div class="event_figure">
    {{# event-image }}
      {{> atoms-image-4x3 }}
    {{/ event-image }}
  </div>
  <div class="event_body">
    <a href="{{ url }}">
      {{# event-title }}
        {{> atoms-heading-2 (class: "event_title") }}
      {{/ event-title }}
      {{# event-subtitle }}
        {{> atoms-heading-4 (class: "event_subtitle") }}
      {{/ event-subtitle }}
    </a>
    <div class="event_meta">
      {{# event-location }}
        {{> atoms-text-span (class: "event_location") }}
      {{/ event-location }}
      {{# event-date }}
        {{> atoms-text-date (class: "event_date") }}
      {{/ event-date }}
      {{# event-time }}
        {{> atoms-text-time (class: "event_time") }}
      {{/ event-time }}
    </div>
  </div>
</div>