<div class="block block-event">
  {{# empty }}
  <a class="b-thumb" href="{{ url }}">
    <div class="b-thumb-empty">{{> atoms-heading-3 (content: "News") }}</div>
  </a>
  {{/ empty }}
  {{^ empty }}
  <a class="b-thumb" href="{{ url }}">
    {{> atoms-landscape-4x3 }}
  </a>
  {{/ empty }}
  <div class="b-text">
    {{> atoms-heading-2 }}
    <div class="b-info">
      {{> atoms-campus }}
      {{> atoms-room }}
      {{> atoms-date }}
      {{> atoms-time }}
    </div>
    {{> atoms-button-text-alternate }}
  </div>
</div>