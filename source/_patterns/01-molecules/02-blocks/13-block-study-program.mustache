<div class="{{ program-theme }} program">
  {{# program-tag }}
    {{> atoms-text-span (class:"program_tag")}}
  {{/ program-tag }}
  <a href="{{url}}">
    {{> atoms-heading-3 (class:"program_title")}}
  </a>
  <div class="program_details">
    {{# program-location }}
      {{> atoms-text-span (class:"program_location")}}
    {{/ program-location }}
    {{# program-lang }}
      {{> atoms-text-span (class:"program_lang")}}
    {{/ program-lang }}
  </div>
</div>