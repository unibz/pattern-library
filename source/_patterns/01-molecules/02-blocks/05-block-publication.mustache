<div class="publication">
  <div class="publication_figure">
    {{# empty }}
      <div class="publication_thumb publication_thumb-none">{{> atoms-text-span (class: "class='publication_thumbTitle'", span: "Book" }}</div>
    {{/ empty }}
    {{^ empty }}
      {{> atoms-portrait (class: "class='publication_thumb'") }}
    {{/ empty }}

    {{# publ-date }}{{> atoms-text-time (class: "class='publication_meta'") }}{{/ publ-date }}
    {{# publ-meta }}
      {{> atoms-text-span (class: "class='publication_meta'") }}
    {{/ publ-meta }}

    {{# publ-serials }}
      {{> atoms-text-span (class: "class='publication_serial'") }}
    {{/ publ-serials }}
  </div>
  
  <div class="publication_body">
    {{> atoms-heading-2 (class: "class='publication_title'") }}
    <p class="publication_authors">
      {{> atoms-text-span (class: "class='publication_label'", span: "Ed. by") }}
      {{# publ-authors }}
        {{> atoms-text-span }};
      {{/ publ-authors }}
    </p>
    {{> atoms-text-paragraph (class: "class='publication_excerpt'")}}
    {{> atoms-forms-input-number (form.class: "class='form_input publication_input'")}}
    {{> atoms-button (button: "Buy it")}}
    {{# publ-price }}{{> atoms-text-span (class: "class='publication_price'")}}{{/ publ-price }}
  </div>
</div>